<html>

<head>
    <title>Project</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="../assets/img/brandred.png">
    <link rel="stylesheet" href="../assets/css/index.css">
    <link rel="stylesheet" href="../assets/css/blog.css" />
    <link rel="stylesheet" href="../assets/css/nav.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>

<body>
    <!--  -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary px-2" style="position: fixed;">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
            <img src="../assets/img/brandred.png" alt="Home" style="width: 50px;">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link " aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/blog">My Project</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/testimonial">Testimonial</a>
              </li>
            </ul>
        </div>
        <a href="/contact">
          <button type="button" class="btn btn-dark mycostimizebtn">Contact</button>
        </a>
        </div>
    </nav>

{{!--  --}}
    <div class="blog">
        <div class="blog-form">
            <div class="form-container">
                <form action="/blog" method="POST">
                    <h1 class="title">ADD MY PROJECT</h1>
                    <div>
                        <label for="input-blog-title">Project Name</label>
                        <input id="input-blog-title" name="title"/>
                    </div>

                    <div class="the-date"> 
                        <div class="project-date">
                            <label for="input-start-date">Start Date</label>
                            <input type="date" id="input-start-date" name="starDate" />
                        </div>
                        <div class="project-date">
                            <label for="input-end-date">End Date</label>
                            <input type="date" id="input-end-date" name="endDate" />
                        </div>
                    </div>

                    <div>
                        <label>Technologies</label>
                        <div class="checkbox-group">
                            <label>
                                <input type="checkbox" id="node" value="node" name="tech"/>
                                Node
                            </label>
                            <label>
                                <input type="checkbox" id="react" value="react"  name="tech"/>
                                React
                            </label>
                            <label>
                                <input type="checkbox" id="figma" value="figma" name="tech" />
                                Figma
                            </label>
                            <label>
                                <input type="checkbox" id="mdb" value="mdb" name="tech" />
                                MDB
                            </label>
                        </div>
                    </div>
                    <div>
                        <label for="input-blog-content">Description</label>
                        <textarea id="input-blog-content" name="description"></textarea>
                    </div>
                    <div class="mt-5">
                        <label>Upload Image</label>
                        <br>
                        <img id="selected-image" src="#" alt="Preview" class="rounded" style="display: none;">
                        <div>
                            <label for="input-blog-image" class="form-label"></label>
                            <input class="form-control" type="file" id="input-blog-image" accept="image/*">
                        </div>
                    </div>
                    <div class="button-group">
                        <button id="submit-button" type="submit">submit</button>
                    </div>
                </form>
            </div>
        </div>
        
        <h1 class="title">MY PROJECT</h1>

        {{!-- <div id="contents" class="blog-list"></div> --}}
        <div class="blog-list">
            {{#each dataBlog}}
            <div class=" card mb-3 w-100 m-3 p-3">
                <div class="row g-0">
                    <div class="blog-image img-fluid rounded-start">
                        <img src="" alt="..." />{{this.image}}
                    </div>
                    <br>
                    {{!-- <div class="col-md-4">
                        <img src="" class="img-fluid rounded-start" alt="...">{{this.image}}
                    </div> --}}
                    <div class="col-md-6">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/blog-detail/{{@index}}" target="_blank" style="text-decoration: none;">{{this.title}}</a>
                            </h5>
                            <p>
                                12 Juli 2021 22:30 WIB | Muhammad Noorwahyu
                            </p>
                            <p class="card-text" style="text-decoration: none;">{{this.description}}</p>
                            <p class="card-text">
                                <small class="text-body-secondary">
                                    1 seconds ago
                                </small></p>
                        </div>
                    </div>
                    <div class="btn-group">
                        <a href="/edit-blog/{{this.id}}">
                            <button class="btn-edit">Edit Post</button>
                        </a>

                        <a href="/delete/{{this.id}}">
                            <button class="btn-post">Delete Post</button>
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</body>
<script src="../assets/js/blog.js"></script>
<script src="../assets/js/nav.js"></script>

</html>